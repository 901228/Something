    /* languages */

    /* JAVA */
    // "java.format.settings.profile": "mochi",
    "java.format.settings.url": "file:///home/harry90/東西/eclipse_mochi_formatter.xml",
    "java.home": "/usr/lib/jvm/java-11-openjdk-amd64",
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-11",
            "path": "/usr/lib/jvm/java-11-openjdk-amd64",
        },
    ],
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
    },

    /* C & Cpp */
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.default.compilerArgs": [
        "-lm"
    ],

    /* dart */
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.defaultFormatter": "Dart-Code.dart-code",
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },

    /* LaTeX */
    "latex-workshop.bibtex-format.tab": "tab",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
    "latex-workshop.latex.recipes": [
        {
            // 編譯簡單的小檔案
            "name": "XeLaTeX",
            "tools": [
                "XeLaTeX"
            ]
        },
        {
            "name": "PDFLaTex",
            "tools": [
                "PDFLaTex"
            ]
        },
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "XeLaTeX",
                "Biber",
                "XeLaTeX",
                "XeLaTeX"
            ]
        },
        {
            "name": "pdf->bib->pdf->pdf",
            "tools": [
                "PDFLaTex",
                "Biber",
                "PDFLaTex",
                "PDFLaTex"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "PDFLaTex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "XeLaTeX",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "Biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        },
    ],

    // 清空中間文件
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.bcf",
        "*.run.xml",
        "*.synctex.gz"
    ],

    /* markdown */
    "workbench.editorAssociations": [{
        "viewType": "default",
        "filenamePattern": "*.md",
    }],
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "markdown.extension.tableFormatter.enabled": true,
    "markdown.extension.tableFormatter.normalizeIndentation": true,
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.extension.orderedList.autoRenumber": true,
    "markdown.extension.print.onFileSave": false,
    "[markdown]": {
        "editor.formatOnSave": true,
    },

    /* python */
    "python.pythonPath": "/usr/bin/python3.8",
    "python.languageServer": "Pylance",
}
